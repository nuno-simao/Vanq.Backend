{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "StructuredLogging": {
    "MinimumLevel": "Information",
    "MaskedFields": [
      "password",
      "token",
      "refreshToken",
      "email",
      "cpf",
      "telefone",
      "phone"
    ],
    "ConsoleJson": true,
    "FilePath": "logs/vanq-.log",
    "EnableRequestLogging": true,
    "SensitiveValuePlaceholder": "***"
  },
  "Jwt": {
    "Issuer": "Vanq.API",
    "Audience": "Vanq.Client",
    "SigningKey": "CHANGE_ME_TO_A_STRONG_32_CHAR_SECRET_VALUE",
    "AccessTokenMinutes": 10,
    "RefreshTokenDays": 14
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=vanq;Username=postgres;Password=postgres"
  },
  "Rbac": {
    "FeatureEnabled": true,
    "DefaultRole": "viewer",
    "Seed": {
      "DefaultRole": "viewer",
      "Permissions": [
        {
          "Name": "rbac:role:read",
          "DisplayName": "Read roles",
          "Description": "List and inspect roles"
        },
        {
          "Name": "rbac:role:create",
          "DisplayName": "Create roles",
          "Description": "Create new roles and assign permissions"
        },
        {
          "Name": "rbac:role:update",
          "DisplayName": "Update roles",
          "Description": "Modify existing role metadata"
        },
        {
          "Name": "rbac:role:delete",
          "DisplayName": "Delete roles",
          "Description": "Remove non-system roles"
        },
        {
          "Name": "rbac:permission:read",
          "DisplayName": "Read permissions",
          "Description": "List registered permissions"
        },
        {
          "Name": "rbac:user:role:assign",
          "DisplayName": "Assign user roles",
          "Description": "Grant roles to users"
        },
        {
          "Name": "rbac:user:role:revoke",
          "DisplayName": "Revoke user roles",
          "Description": "Revoke roles from users"
        },
        {
          "Name": "system:params:read",
          "DisplayName": "Read system parameters",
          "Description": "List and inspect system parameters"
        },
        {
          "Name": "system:params:write",
          "DisplayName": "Write system parameters",
          "Description": "Create, update, and delete system parameters"
        },
        {
          "Name": "system:feature-flags:read",
          "DisplayName": "Read feature flags",
          "Description": "List and inspect feature flags"
        },
        {
          "Name": "system:feature-flags:create",
          "DisplayName": "Create feature flags",
          "Description": "Create new feature flags"
        },
        {
          "Name": "system:feature-flags:update",
          "DisplayName": "Update feature flags",
          "Description": "Modify existing feature flags"
        }
      ],
      "Roles": [
        {
          "Name": "admin",
          "DisplayName": "Administrator",
          "Description": "Full access to RBAC management",
          "IsSystemRole": true,
          "Permissions": [
            "rbac:role:read",
            "rbac:role:create",
            "rbac:role:update",
            "rbac:role:delete",
            "rbac:permission:read",
            "rbac:user:role:assign",
            "rbac:user:role:revoke",
            "system:params:read",
            "system:params:write",
            "system:feature-flags:read",
            "system:feature-flags:create",
            "system:feature-flags:update"
          ]
        },
        {
          "Name": "manager",
          "DisplayName": "Manager",
          "Description": "Manage team role assignments",
          "IsSystemRole": false,
          "Permissions": [
            "rbac:role:read",
            "rbac:permission:read",
            "rbac:user:role:assign",
            "rbac:user:role:revoke"
          ]
        },
        {
          "Name": "viewer",
          "DisplayName": "Viewer",
          "Description": "Read-only access to RBAC data",
          "IsSystemRole": true,
          "Permissions": [
            "rbac:role:read",
            "rbac:permission:read"
          ]
        }
      ]
    }
  },
  "ErrorHandling": {
    "MaskInternalErrors": true,
    "IncludeExceptionDetails": false
  },
  "Cors": {
    "PolicyName": "vanq-default-cors",
    "AllowedOrigins": [],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "PATCH",
      "DELETE",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "Accept",
      "Origin",
      "X-Requested-With"
    ],
    "AllowCredentials": true,
    "MaxAgeSeconds": 3600
  },
  "SystemParameters": {
    "CacheDurationSeconds": 60
  },
  "AllowedHosts": "*"
}
